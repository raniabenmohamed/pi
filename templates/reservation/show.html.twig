{% extends 'layout.html.twig' %} 
{% block content_page %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Coderes</th>
                <td>{{ reservation.coderes }}</td>
            </tr>
            <tr>
                <th>Dateres</th>
                <td>{{ reservation.dateres ? reservation.dateres|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nbjours</th>
                <td>{{ reservation.nbjours }}</td>
            </tr>
            <tr>
                <th>Prixres</th>
                <td>{{ reservation.prixres }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ reservation.enable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock content_page %}
